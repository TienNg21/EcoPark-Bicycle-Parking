        <% if (lsu.length === 0) { %>
          <div class="card">
            <h1 style="color:#478640">Không có lịch sử thuê xe</h1>
          </div>
        <% } else { %>
          <% for( let index = lsu.length - 1; index >= 0; index--) { %>
